<Window x:Class="SocketClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketClient"
        mc:Ignorable="d"
       Title="客户端" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBox x:Name="txtIP" Text="192.168.1.216"></TextBox>
            <TextBox x:Name="txtPort" Text="48001"></TextBox>
            <Button x:Name="btnStart">Start</Button>
            <Button x:Name="btnStop">Stop</Button>
            <Button x:Name="btnSend">Send</Button>
        </StackPanel>
        <TextBox x:Name="txtToSend" Grid.Row="1"></TextBox>
        <TextBox x:Name="txtReceive" Grid.Row="2"></TextBox>
    </Grid>
</Window>
